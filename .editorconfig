root = true

[*]
indent_size = 2
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
line_length = 120

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.rst]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 4
